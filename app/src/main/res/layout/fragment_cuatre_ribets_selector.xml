<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

  <Button
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:background="?selectableItemBackground"
      android:text="Ribet intern"
      android:id="@+id/ribetInternSelector"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:background="?selectableItemBackground"
      android:text="Ribet central (intern)"
      android:id="@+id/ribetMiddleInternSelector"
      />


  <Button
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:background="?selectableItemBackground"
      android:text="Ribet central (extern)"
      android:id="@+id/ribetMiddleExternSelector"
      />


  <Button
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:background="?selectableItemBackground"
      android:text="Ribet extern"
      android:id="@+id/ribetExternSelector"
      />

</LinearLayout>